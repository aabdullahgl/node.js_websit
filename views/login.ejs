


<%- include('header') -%>


<div class="text-center -div" id="login">
    <div class="container w-25 border py-5" >
        <div class="title pb-5">
            <h2 class="font-weight-bold">Admin Panel</h2>
            <span>Lütfen Giriş Yapınız...</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group">
                <small class="form-text text-muted text-left">Kullanıcı Adı:</small>
                <input type="email" class="form-control" placeholder="email" name="email">
                
            </div>
            <div class="form-group">
                <small class="form-text text-muted text-left">Şifre :</small>
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Giriş Yap</button>
        </form>
    </div>
</div>


<%- include('footer') -%>
